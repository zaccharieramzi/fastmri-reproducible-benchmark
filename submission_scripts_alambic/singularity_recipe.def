Bootstrap: docker
From: ubuntu:16.04


%help
    Singularity container for fastmri_recon executions.

    Contains fastmri_recon and reqs.

%runscript
    echo "Running python3.6"
    exec python3.6 "$@"

%files
  fastmri-reproducible-benchmark

%post
  apt update -y
  apt install software-properties-common curl -y
  apt update -y
  add-apt-repository ppa:deadsnakes/ppa -y
  apt update -y
  apt install python3.6 python3.6-dev -y
  curl https://bootstrap.pypa.io/get-pip.py | python3.6
  pip3 install fastmri-reproducible-benchmark/

%environment
    export LC_ALL=C
    export FASTMRI_DATA_DIR=/scratch/fastMRI_data/
    export OASIS_DATA_DIR=/scratch/OASIS_data/
